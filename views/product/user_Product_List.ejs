<%- include('../layouts/header.ejs') %>
<!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> -->
<section style=" padding-top: 5px;" >
    <!-- <div style="text-align: right;">Welcome, admin123@gmail.com</div> -->
    <div class="container">
            <!-- <div class="row  mt-4  col-1">
          <a class="btn btn-success m-5" style="width: 200px";  href="/admin/product">Add Product</a>
          </div> -->
          <h4 style="text-align: center;margin-top: 20px;">Our Products</h4><br>

          
          <table  id="myTable" style="border-right: 0px; border-spacing:10px; border-collapse: separate;" class="table mt-5 ">

            <thead style="padding:5px; margin:5px">
             <tr>
                  <th scope="col" style="font-size: small; text-align: center;vertical-align: middle"; >Image</th>
                  <th scope="col" style=" font-size: small; text-align: center;vertical-align: middle"; >title</th>
                  <th scope="col"style=" font-size: small; text-align: center;vertical-align: middle"; >UnitPrice</th>
                  <th scope="col" style="font-size: small; text-align: center;vertical-align: middle"; >Weight</th>
                  <!-- <th scope="col" style="font-size: x-small; text-align: center;vertical-align: middle"; >Category</th> -->
                  <th scope="col" style="font-size: small; text-align: center;vertical-align: middle"; >Available</th>
                  <th scope="col" style="font-size: small; text-align: center;vertical-align: middle"; >Details</th>
                  <th scope="col" style="font-size: small; text-align: center;vertical-align: middle"; >Cart</th>
                  <th scope="col" style="font-size: small; text-align: center;vertical-align: middle"; >WishList</th>
                </tr>
              </thead>
            <tbody>
                <% products.forEach(function(product){ %>
               <tr >
                <td style="width:150px;  text-align: center; vertical-align: middle; background-color:white";
             ><img style="display: block; width:100%;height: 150px;"; src="/images/product/<%= product.images[0] %>" alt=" "></td>
                <td  style=" text-align: center;vertical-align: middle";"><strong><%= product.title %></strong></td>
                <td  style=" text-align: center;vertical-align: middle";>â‚¹&nbsp;<strong><%= product.unit_price %>.00</td>
                <td  style=" text-align: center;vertical-align: middle";><%=product.Weight %></td>
                <!-- <td  style=" text-align: center;vertical-align: middle";><%=product.category %></td> -->
                <td  style=" text-align: center;vertical-align: middle";><%=product.quantity %></td>
                <td  style=" text-align: center;vertical-align: middle";><a href="/product/details/<%=product._id %>"  style="border-radius: 20px;font-size: x-small;" class="btn btn-success">Details</a></td>
                <% var status= product.unlisted  %>
                    <% if(status==0) {%>
                    <td  style=" text-align: center;vertical-align: middle";>
                      <a href="/cart/add_To_Cart/<%=product._id%>" style="border-radius: 20px;font-size: x-small;" class="btn btn-warning" >AddToCart</a>
                   
                    </td>
                     <td  style=" text-align: center;vertical-align: middle";>
                        <a href="/wishlist/add_To_Wishlist/<%=product._id%>" style="border-radius: 20px;font-size: x-small;" class="btn btn-warning">AddToWishList</a>
                    </td>
                
                     <%}else { %>
               
                    <!-- <td  style=" text-align: center;vertical-align: middle";><a href="/admin/listProduct/<%=product._id%>" class="btn btn-danger" -->
                      <!-- onclick="return confirm ('do you want to list the product : <%=product.title %> ?')">List</a></td> -->
                    <%} %>
              </tr>
              <% }); %>
            </tbody>
          </table>
    
   </div>
   <br>
   <br>
</section>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
