    <div class="category-form"  style="margin-top: 60px;">
        <form action="/changePassword" method="post"  >

            <div name="error" style="font-size:x-small; color:red; text-align: center;">
                <% if(typeof message !=='undefined' ){ %>
                    <h6>
                        <%= message %>
                    </h6>
                <% } %>
            </div>
            <h3 class="text-center">Change Password</h3>

           
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Old password" name="oldPassword" id="pass" value="" text-center required="required" >
   
               <% if( errors && errors.oldPassword ) { %>
                   <span class="text-danger"><%= errors.oldPassword.msg %></span>
                   <% } %>
               </div>
             <div class="form-group">
                
             <input type="password" class="form-control" placeholder="New password" name="password" id="pass" value="" text-center required="required" >
           
            <% if( errors && errors.password ) { %>
                <span class="text-danger"><%= errors.password.msg %></span>
                <% } %>
            </div>

            <div class="form-group">
                <input type="password" class="form-control" placeholder="Confirm  new  password" name="cPassword" id="title1" value="" text-center required="required" >
                
               <% if( errors && errors.cPassword ) { %>
                   <span class="text-danger"><%= errors.cPassword.msg %></span>
                   <% } %>
               </div>
               <!-- <span style="color:red;font-size:x-small">*Paasword must contain more than 4 letters with one uppercase and 1 number</span> -->
                       <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
            </div>

        </form>

    </div>
</section>

</body>

