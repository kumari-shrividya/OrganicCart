<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Info</title>
</head>
<body>
  <!-- Check if there is a success message, and display it in a modal -->
  <% if (successMessage) { %>
    <div id="successModal">
      <p><%= successMessage %></p>
    </div>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
       alert('<%= successMessage %>');

      });

    </script>
     <%  } %>
</body>
</html>
