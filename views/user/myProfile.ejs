<%- include('../layouts/header.ejs') %>

<style>
body{background: #eee9f0}
.form-control:focus{box-shadow: none;border-color: #BA68C8}
.profile-button{background: r#eee9f0;box-shadow: none;border: none}
.profile-button:hover{background: #eee9f0}
.profile-button:focus{background: #eee9f0;box-shadow: none}
.profile-button:active{background:eee9f0;;box-shadow: none}
.back:hover{color: eee9f0;;cursor: pointer}.labels{font-size: 11px}
/* .add-experience:hover{background: eee9f0;;color: #fff;cursor: pointer;border: solid 1px #BA68C8} */

</style>

<section>


    <% if (typeof user!=='undefined') {%>
    <div class="container rounded bg-white mt-5 mb-5" style="width:780px;height:480px" > 
              
        <form  id="editProfileForm" action="/myProfile"   method="post"  >
            
    <div id="message" style="color:red;text-align: center;padding-top: 30px; font-weight: bold;">
        <%if (typeof message !=='undefined'){%>
            <%=message%>
        <%}%></div>
        <div class="row"> 

         <div class="col-md-3 border-right"> 
            
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle mt-4" src="/images/avatar.jpg" style="margin-left: 40px;">
                
                <span class="font-weight-bold"><%=user.name%></span><span class="text-black-50"><%=user.email%></span><span> </span></div>
             </div> 
             <div class="col-md-5 border-right" style="margin-left: 40px;"> 
                <div class="p-3 py-5"> 
                <div class="d-flex justify-content-between align-items-center mb-3 ml-5">
                  
                 <h4 class="text-right">Profile Settings</h4>
                 </div> 
               
                 <div class="row mt-2 "> 
                    <div class="col-md-12">
                    <!-- <label class="labels">Name</label> -->
                    <span>Name</span>
                    <input  type="text" class="form-control" placeholder="name"  name="name" value="<%=user.name%>">
                    <% if( errors &&  errors.name  ) { %>
                        <span class="text-danger"><%= errors.name.msg %></span>
                        <% } %>
                 </div>
                   
                </div>
                 <div class="row mt-3"> 
                    <div class="col-md-12">
                        <!-- <label class="labels">PhoneNumber</label> -->
                        <span>PhoneNumber</span>
                        <input type="text" class="form-control" placeholder="phonenumber" name="phoneno" value="<%=user.phone%>">
                        <% if( errors && errors.phone) { %>
                            <span class="text-danger"><%= errors.phone.msg %></span>
                            <% } %>
                    </div>
                    </div>
                    <div class="row mt-3">
                     <div class="col-md-12">
                        <!-- <label class="labels">Email ID</label> -->
                        <span>Email ID</span>
                        <input type="text" class="form-control" placeholder="email id" name="email" value="<%=user.email%>">
                        <% if( errors && errors.email ) { %>
                            <span class="text-danger"><%= errors.email.msg %></span>
                            <% } %>
                    </div> 
                    </div>
                   
                   
                      <div class="mt-2 text-center"><button class="btn btn-primary profile-button" type="submit">
                        Update Profile</button></div> </div> </div> 
                      <%} %>
                </form>
                
                     </div> 
                </div> 
            </div>
</div>
</div>
</div>
</section>

